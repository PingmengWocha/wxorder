page {
  width: 100%;
  height: 100%;
}

.root {
  width: 100%;
  height: 100%;
}

.content {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.confirm {
  display: flex;
  flex-direction: row;
  margin-top: 40rpx;
  margin-bottom: 40rpx;
  width: 80%;
  border-bottom: 2rpx #A3A3A3 solid;
  align-items: center;
}

.icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 10rpx;
}

.input {
  font-size: 28rpx;
  color: #A3A3A3;
}

.bottom {
  margin-top: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.btn {
  width: 80%;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 180rpx;
  background-color: #1296db;
  color: white;
  text-align: center;
}

