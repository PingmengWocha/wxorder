page {
  width: 100%;
  height: 100%;
}

.root {
  width: 100%;
  height: 100%;
}

.background {
  width: 100%;
  height: 100%;
  z-index: -1;
  position: absolute;
  background-color: whitesmoke;
  top: 0rpx;
}

.background_top {
  height: 30%;
  border-bottom-left-radius: 60rpx;
  border-bottom-right-radius: 60rpx;
  background: linear-gradient(#B5CDFD,#6186E4);
}

.content {
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  z-index: 1;
}

.content_top {
  /* height: 25%; */
  width: 90%;
  background-color: white;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: relative;
}

.avatar {
  width: 160rpx;
  height: 160rpx;
  position: absolute;
  top: -80rpx;
}

.avatar_img {
  width: 100%;
  height: 100%;
}

.content_text {
  margin-top: 100rpx;
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.name {
  font-size: 36rpx;
  margin-top: 20rpx;
}

.phonenum {
  font-size: 30rpx;
  color: #A3A3A3;
  margin-top: 20rpx;
}

.info {
  /* height: 20%; */
  width: 90%;
  background-color: white;
  border-radius: 20rpx;
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
}

.info_top {
  margin-top: 10rpx;
  display: flex;
  flex-direction: row;
}

.text {
  margin-left: 10rpx;
  font-size: 28rpx;
}

.status {
  margin-left: 20rpx;
  font-size: 28rpx;
  color: red;
}

.info_bottom {
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
}

.bottom_text {
  display: flex;
  flex-direction: row;
  margin-bottom: 20rpx;
}

.time {
  margin-left: 30rpx;
  margin-right: 20rpx;
  font-size: 28rpx;
}

.date {
  font-size: 26rpx;
  color: #A3A3A3;
}

.client {
  margin-top: 30rpx;
  height: 5%;
  display: flex;
  flex-direction: row;
  width: 90%;
  background-color: white;
  border-radius: 15rpx;
}

.client_left {
  flex: 4;
  display: flex;
  flex-direction: row;
  /* justify-content: center; */
  align-items: center;
}

.client_right {
  flex: 1;
  display: flex;
  flex-direction: row-reverse;
  align-items: center;
}

.client_text {
  margin-left: 10rpx;
  font-size: 28rpx;
}

.icon {
  width: 34rpx;
  height: 34rpx;
  margin-left: 10rpx;
  margin-right: 10rpx;
}

.gotoimg {
  width: 36rpx;
  height: 36rpx;
  margin-right: 10rpx;
}
