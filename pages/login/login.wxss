page {
  width: 100%;
  height: 100%;
}

.root {
  width: 100%;
  height: 100%;
  background-color: white;
}

.out {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100%;
}

.content_img {
  flex: 3;
  width: 100%;
}

.top_img {
  width: 100%;
  height: 100%;
}

.text {
  flex: 2;
  margin-top: 80rpx;
  width: 80%;
  display: flex;
  flex-direction: column;
}

.phone {
  display: flex;
  flex-direction: column;
  padding-bottom: 20rpx;
  padding-top: 40rpx;
}

.content {
  display: flex;
  flex-direction: row;
  padding-bottom: 10rpx;
}

.left_phone {
  padding-right: 20rpx;
  width: 20%;
  border-right: 2rpx #A3A3A3 solid;
  text-align: right;
}

.right_phone {
  margin-left: 20rpx;
  width: 80%;
}

.line {
  height: 2rpx;
  width: 100%;
  background-color: #A3A3A3;
}


.bottm {
  padding-bottom: 30rpx;
  flex: 1;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn {
  width: 80%;
  line-height: 80rpx;
  height: 80rpx;
  background-color: #1296db;
  border-radius: 10rpx;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
}