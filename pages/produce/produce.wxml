<view class="root">
  <view class="top-search" hidden="{{hideSearch}}">
    <view class="search-out">
      <image class="icon-search" src="../../images/other/search.png"></image>
      <input class="searchinput" placeholder="请输入搜索名称"></input>
      <!-- <image class="icon-delete" hidden="{{isShow}}" bindtap="deleteClick"></image> -->
    </view>
  </view>
  <view class="top-content" hidden="{{!hideSearch}}">
    <scroll-view scroll-x="{{true}}" class="avatar-item" scroll-with-animation="{{true}}">
      <block wx:for="{{clientItems}}" wx:key="id" wx:for-item="item">
        <view class="avatar-out">
          <view class="fixscroll">
            <image class="avatar" src="{{item.url}}"></image>
            <view class="text" wx:if="{{item.haveHis}}" bindtap="history">我吃过</view>
            <view class="text" wx:if="{{!item.haveHis}}"></view>
          </view>
        </view>
      </block>
    </scroll-view>
    <view class="input-item">
      <view class="input-out">
        <view class="input-text">人数</view>
        <view class="outinput">
          <input class="input" placeholder-class="porderinput" value="16" type="number" placeholder="请输入人数" bindinput="clientTf" maxlength="11"></input>
        </view>
      </view>
      <view class="input-out">
      <view class="input-text">桌号</view>
      <view class="outinput">
        <input class="input" placeholder-class="porderinput" value="16" type="number" placeholder="请输入桌号" bindinput="orderTf" maxlength="11"></input>
      </view>
      </view>
    </view>
  </view>

  <view class="order-content">
    <view class="order-content-top">
      <view class="outtext">
        <view class="tab-text">样图</view>
      </view>
      <view class="outtext">
        <view class="tab-text">菜名</view>
      </view>
      <view class="outtext">
        <view class="tab-text">单价(元)</view>
      </view>
    </view>
    <view class="order-item">
      <scroll-view scroll-y="{{true}}" class="sorder-item">
        <view class="item" wx:for="{{produceItems}}" wx:key="id" wx:for-item="item" wx:for-index="idx">
          <image class="left-img" src="{{item.url}}"/>
          <view class="name-out">
            <view class="name">{{item.name}}</view>
          </view>
          <view class="details">
            <view class="price-out">
              <view class="price">{{item.price}}</view>
            </view>
            <view class="details-other">
              <view class="plus-out">
                <view class="plus">+</view>
              </view>
              <view class="other-out">
                <view class="other" bindtap="detailClick" data-index="{{idx}}">详情</view>
              </view>
            </view>
          </view>
        </view>
      </scroll-view>
    </view>
  </view>

  <!-- 用户历史弹窗 -->
  <view class="dialog-content-out" wx:if="{{canShow}}" bindtap="miss">
    <view class="dialog-content" catchtap>
      <view class="top-like">
        <scroll-view class="stop-like" scroll-y="{{true}}">
          <view class="like-text">客人喜好：辣的，多放香菜辣的</view>
        </scroll-view>
      </view>
      <view class="center-time">
        <view class="time-text">上次进店</view>
        <view class="time">2020-09-12 12:30:09</view>
      </view>
      <view class="produce-list">
        <scroll-view class="sitem" scroll-y="{{true}}">
          <view class="like-item" wx:for="{{produceItems}}" wx:key="id" wx:for-item="item" >
            <view class="produce-img-out">
              <image class="produce-img" src="{{item.url}}"></image>
            </view>
            <view class="produce-name-out">
              <view class="produce-name">{{item.name}}</view>
            </view>
          </view>
        </scroll-view>
      </view>
    </view>
  </view>
</view>
