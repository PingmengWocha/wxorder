page {
  width: 100%;
  height: 100%;
}

.root {
  width: 100%;
  height: 100%;
  background-color: #F2F4F5;
}

.content-item {
  width: 100%;
  height: 90%;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.top-title {
  width: 100%;
  padding: 20rpx;
  border-bottom: 2rpx #c2bcbc solid;
  border-top: 2rpx #c2bcbc solid;
  background-color: white;
}

.item-out {
  display: flex;
  flex-direction: row;
  background-color: white;
  padding: 20rpx;
  justify-content: center;
  border-bottom: 2rpx #c2bcbc solid;
}

.item-title {
  flex: 1;
}

.content {
  flex: 3;
  color: #c2bcbc;
}

.image-out {
  width: 100%;
}

.home-image {
  width: 100%;
  height: 100%;
}

.bottom-price {
  position: fixed;
  bottom: 0rpx;
  width: 100%;
  height: 10%;
  display: flex;
  flex-direction: row;
  align-content: center;
  justify-content: center;
  background-color: white;
  padding-bottom: 30rpx;
}

.price-text-out{
  flex: 1;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.price-text {
  text-align: right;
}

.price-out {
  flex: 2;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding-left: 30rpx;
}

.price {
  text-align: center;
  font-size: 70rpx;
}