page {
  width: 100%;
  height: 100%;
}

.root {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  background-color: #F2F4F5;
}

.top-info {
  flex: 1;
  width: 100%;
  display: flex;
  flex-direction: row;
  align-content: center;
  flex-shrink: 0;
}

.left-avatar {
  flex: 1;
}

.avatar {
  width: 100%;
  height: 100%;
}

.right {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.right-top {
  margin-top: 10rpx;
  margin-left: 20rpx;
  height: 40%;
  display: flex;
  flex-direction: row;
  background-color: white;
  align-content: center;
  justify-content: center;
}

.text {
  flex: 1;
  font-size: 32rpx;
  padding-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.orderinput-out {
  flex: 2;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.orderinput {
  color: #A3A3A3;
  font-size: 30rpx;
}

/* 菜的列表 */
.item-group {
  flex: 2;
  width: 100%;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  flex-shrink: 0;
  overflow: hidden;
}

.sitem-group {
  width: 100%;
  height: 100%;
}

.item {
  border: 2rpx #A3A3A3 solid;
  background-color: white;
  display: flex;
  flex-direction: row;
  height: 150rpx;
  margin-bottom: 10rpx;
}

.food-out {
  flex: 1;
  height: 100%;
}

.food-img {
  width: 100%;
  height: 100%;
}

.right-item {
  flex: 2;
  display: flex;
  flex-direction: row;
}

.food-info {
  flex: 3;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.food-name {
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}

.food-num {
  flex: 2;
  display: flex;
  flex-direction: row;
  align-content: center;
}

.icon-out {
  flex: 1;
  font-size: 48rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.icon {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  text-align: center;
}

.icon-down {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  text-align: center;
  background-color: #F2F4F5;
  border-radius: 20rpx;
}

.input-food-num-out {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.input-food-num {
  text-align: center;
}

/* 底部 */
.bottom {
  flex: 2;
  display: flex;
  flex-direction: column;
  width: 100%;
  padding-bottom: 30rpx;
  flex-shrink: 0;
}

.top-bottom {
  flex: 2;
  display: flex;
  flex-direction: row;
  margin-bottom: 20rpx;
}

.left-bottom {
  flex: 1;
  font-size: 36rpx;
  height: 100%;
}

.left-bottom-text {
  padding-left: 20rpx;
}

.right-bottom {
  flex: 3;
  height: 100%;
  margin-right: 20rpx;
}

.textarea {
  width: 100%;
  height: 100%;
  border: 2rpx #A3A3A3 solid;
  background-color: white;
}

.bottom-bottom {
  flex: 1;
  display: flex;
  flex-direction: column;
  width: 100%;
}

.total {
  flex: 1;
  font-size: 36rpx;
  text-align: right;
  margin-right: 20rpx;

}

.btn-out {
  flex: 1;
  display: flex;
  flex-direction: row-reverse;
  margin-right: 20rpx;
}

.btn {
  color: white;
  font-size: 36rpx;
  border-radius: 10rpx;
  width: 30%;
  height:80rpx;
  line-height: 80rpx;
  display: flex;
  align-content: center;
  justify-content: center;
  text-align: center;
  background-color: #1AAD19;
}


